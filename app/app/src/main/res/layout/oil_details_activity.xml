<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lustrel.appgeologia.activities.OilDetailsActivity"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/textColorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="GERAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/content_text_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Operador: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/owner"
                        android:textSize="@dimen/content_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:text="Localização"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/content_text_size" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Latitude: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/latitude"
                        android:textSize="@dimen/content_text_size" />

                    <TextView
                        android:text="Longitude: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/longitude"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Estado: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/state"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Local: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/location"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Campo: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/field"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Bacia: nenhuma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/basin"
                        android:textSize="@dimen/content_text_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:text="Perfuração"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textAllCaps="true"
                android:textSize="@dimen/content_text_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Início da perfuração: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/drilling_year"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Fim da perfuração: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/finish_drilling"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Profundidade: 0m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/depth"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Perfurador: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/drill"
                        android:textSize="@dimen/content_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:text="Categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/content_text_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Categoria: nenhuma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Tipo: nenhum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kind"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Reclassificação: nenhuma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reclassification"
                        android:textSize="@dimen/content_text_size"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
