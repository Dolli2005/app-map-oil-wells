<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lustrel.geoaccess.activities.WaterDetailsActivity"
    android:orientation="vertical"
    android:background="@color/windowBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorSecondary"
        app:titleTextColor="@color/textColorOnDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Localização"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorSecondary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/content_text_size" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Latitude: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/latitude"
                        android:textSize="@dimen/content_text_size" />

                    <TextView
                        android:text="Longitude: 0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/longitude"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Estado: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/state"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Local: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/location"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Cidade: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/county"
                        android:textSize="@dimen/content_text_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:text="Perfuração"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textAllCaps="true"
                android:textSize="@dimen/content_text_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Profundidade: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/depth"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Data: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:textSize="@dimen/content_text_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:text="Níveis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondary"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textAllCaps="true"
                android:textSize="@dimen/content_text_size"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/activity_vertical_margin"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Nível estático: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/static_level"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Nível dinâmico: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dynamic_level"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Número da vazão: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flow_number"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Quociente da vazão: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/flow_rate"
                        android:textSize="@dimen/content_text_size"/>

                    <TextView
                        android:text="Sólidos presentes: não informado(a)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/solids_present"
                        android:textSize="@dimen/content_text_size"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
